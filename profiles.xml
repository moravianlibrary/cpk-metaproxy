<profiles>

	<defaultSolrUrl>http://frontie.cpk-infra.mzk.cz:6081/solr/index</defaultSolrUrl>

	<profile name="cpk" type="solr"/>

	<profile name="nlk" type="solr">
		<institutions>
			<institution>2/Library/praha/NLK/</institution>
		</institutions>
	</profile>

	<profile name="mzk" type="solr">
		<institutions>
			<institution>2/Library/brno/MZK/</institution>
		</institutions>
	</profile>

	<profile name="mzk_czech_books" type="solr">
		<institutions>
			<institution>2/Library/brno/MZK/</institution>
		</institutions>
		<filters>
			<filter>cpk_detected_format_facet_str_mv:"0/BOOKS/"</filter>
			<filter>language:"Czech"</filter>
		</filters>
	</profile>

	<profile name="example" type="solr">
		<institutions>
			<institution>2/Library/brno/MZK/</institution>
		</institutions>
		<filters>
			<filter>cpk_detected_format_facet_str_mv:"0/BOOKS/"</filter>
			<filter>NOT language:("Czech" OR "English")</filter>
		</filters>
	</profile>

	<profile name="loc" type="z39.50">
		<target>lx2.loc.gov:210/LCDB</target>
	</profile>

	<profile name="all" type="z39.50">
		<target>lx2.loc.gov:210/LCDB</target>
		<target>aleph.nkp.cz:9991/NKC-UTF</target>
	</profile>

</profiles>
